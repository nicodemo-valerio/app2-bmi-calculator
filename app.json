{
  "expo": {
    "name": "BMI Calculator",
    "slug": "bmi-calculator",
    "privacy": "public",
    "sdkVersion": "32.0.0",
    "android": {
      "package": "com.nicodemovalerio.bmicalculator"
    },
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "description": "A simple app that calculate the BMI (Body Mass Index) from a person's height and weight. It works both on Metric and Imperial systems."
  }
}